---
import Layout from '../layouts/Layout.astro'
import MediaList from '../components/MediaList.astro'
import { fetchTMDB } from '../tmdb.ts'

const res = await fetchTMDB('/trending/all/day')
const data = await res.json()
---
<Layout>
	<b>Thịnh hành</b>
	<hr class="hr-dot">

	<MediaList list={data.results}>
</Layout>
