---
import SearchForm from '../components/SearchForm.astro'

function get_title(name = "Tìm Phim") {
	const title = Astro.props.title
	return title ? `${title} | ${name}` : name
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100..900&display=swap" rel="stylesheet">
		<title>{get_title()}</title>
	</head>
	<body>
		<header>
			<a href="/"><b>Tìm Phim</b></a>
			<SearchForm />
		</header>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}
	html {
		background: gainsboro;
		font-family: 'Univers LT Pro', -apple-system, system-ui, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
		font-size: 14px;
		padding: 2rem 0.5rem;
	}
	body {
		max-width: 60rem;
		background: whitesmoke;
		border: 1px solid gray;
		box-shadow: 2px 2px silver;
		margin: 0 auto;
		padding: 1rem 1.4rem;
	}
	header {
		padding-bottom: 1.5rem;
	}
	a {
		text-decoration: none;
		color: inherit;
		&:hover {
			color: mediumblue;
		}
	}
	input, button {
		font-size: inherit;
		outline: none;
	}
	.hr-dot {
		height: 1.1rem;
		margin: .8rem 0;
		border: none;
		background: radial-gradient(gray .5px, transparent 1px) 0 0/3px 3px, transparent;
	}
	.hr-dash {
		height: 1px;
		margin: .8rem 0 1rem;
		border: none;
		border-top: 1px dashed gray;
	}
	button {
		border: 1px solid black;
		box-shadow: 2px 2px silver;
		cursor: pointer;
		background: gainsboro;
		color: black;
		&:hover, &:focus {
			background: black !important;
			color: white !important;
		}
		&:active {
			transform: translate(1px, 1px);
			box-shadow: 1px 1px silver;
		}
	}
	.frame {
		position: relative;
		padding: .5rem;
		margin: 0;
		border: 1px solid gray;
		box-shadow: 2px 2px silver;
		img {
			display: block;
		}
		.frame-title {
			position: absolute;
			margin: .5rem;
			left: 0;
			right: 0;
			bottom: 0;
			padding: .25rem .5rem;
			background: rgba(0, 0, 0, .5);
			color: white;
			overflow: hidden;
			white-space: nowrap;
			text-overflow: ellipsis;
		}
		.frame-tag {
			position: absolute;
			margin: .5rem;
			padding: .125rem .5rem;
			background: rgba(0, 0, 0, .5);
			color: white;
			font-siz: 1.2rem;
		}
		&:hover, &:focus {
			.frame-title {
				white-space: wrap;
			}
		}
	}
	a.frame {
		&:hover, &:focus {
			background: steelblue;
		}
		&:active {
			transform: translate(1px, 1px);
			box-shadow: 1px 1px silver;
		}
	}
</style>
