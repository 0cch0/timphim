---
const list = Astro.props.list
---

<div class="list">
	{list.filter(x => x.profile_path).map((person) => (
	<a class="item frame" href={`/person/${person.id}`}>
		<img src={`https://image.tmdb.org/t/p/w200${person.profile_path}`} draggable="false" />
		{person.job == 'Director' && (<div class="director">Đạo diễn</div>)}
		<div class="name">{person.name}</div>
	</a>
	))}
</div>

<style>
	.list {
		display: flex;
		gap: 1rem;
		padding-bottom: 1rem;
		overflow-x: auto;
  		scrollbar-color: gray gainsboro;
	}
	.item {
		position: relative;
		img {
			width: 10rem;
			aspect-ratio: 2/3;
		}
	}
	.director {
		position: absolute;
		top: .5rem;
		left: .5rem;
		padding: .125rem .5rem;
		background: rgba(0, 0, 0, .5);
		color: white;
	}
	.name {
		position: absolute;
		left: .5rem;
		right: .5rem;
		bottom: .5rem;
		padding: .25rem .5rem;
		background: rgba(0, 0, 0, .5);
		color: white;
	}
</style>
